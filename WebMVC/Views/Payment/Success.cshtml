@model dynamic
@{
    ViewBag.Title = "Thanh toán thành công";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Thanh toán thành công</h1>
                <nav class="d-flex align-items-center">
                    <a href="@Url.Action("Index", "Home")">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
                    <a href="#">Thanh toán</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!-- Start Success Area -->
<section class="success-area mt-50">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2 text-center">
                <h2 class="text-success">Thanh toán thành công!</h2>
                <p>Cảm ơn bạn đã đặt hàng. Đơn hàng của bạn đã được xử lý thành công.</p>
                <p><strong>Mã giao dịch:</strong> @ViewBag.TxnRef</p>
                <p><strong>Tổng tiền:</strong> @String.Format("{0:N0}", ViewBag.Amount) ₫</p>
                <a href="@Url.Action("History", "Order")" class="btn primary-btn mt-3">Xem lịch sử đơn hàng</a>
                <a href="@Url.Action("Index", "Product")" class="btn btn-secondary mt-3">Tiếp tục mua sắm</a>
            </div>
        </div>
    </div>
</section>
<!-- End Success Area -->

<style>
    .success-area {
        padding: 50px 0;
    }

    .text-success {
        color: #28a745;
    }

    .primary-btn {
        background-color: #ffba00;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        font-size: 1em;
        transition: background-color 0.3s ease;
    }

        .primary-btn:hover {
            background-color: #e6a800;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        font-size: 1em;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>